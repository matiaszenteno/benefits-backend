{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": ".build",
    "rootDir": "./",
    "sourceMap": true
  },
  "include": ["lambda/**/*.ts"],
  "exclude": ["node_modules/**/*", ".serverless/**/*", ".build/**/*"]
} 